<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    tools:context=".Options">

    <TextView
        android:id="@+id/gameStarHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#1a1a1a"
        android:gravity="center"
        android:text="OPTIONS"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/music" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="215dp"
        android:text="MUSIC"
        android:textColor="#1a1a1a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/musicCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        android:layout_marginTop="219dp"
        android:layout_marginLeft="250dp"
        android:onClick="playSong"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/sound" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="150dp"
        android:text="SOUND"
        android:textColor="#1a1a1a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/soundCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        android:layout_marginTop="308dp"
        android:layout_marginLeft="258dp"
        android:checked="true"
        android:onClick="playEffect" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/notification" />

    <TextView
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="100dp"
        android:text="NOTIFICATION"
        android:textColor="#1a1a1a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/notificationCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyCheckBox"
        android:layout_marginTop="399dp"
        android:checked="true"
        android:layout_marginLeft="310dp"
        android:onClick="addNotification" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="490dp"
        android:text="EXIT"
        android:background="#1a1a1a"
        android:textSize="36sp"
        android:onClick="openMenu"/>

</RelativeLayout>