<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="#ebebeb"
    tools:context=".Levels">

    <Button
        android:id="@+id/backButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_icon"
        android:onClick="goBack"/>

    <Button
        android:id="@+id/level1"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="274dp"
        android:background="#FF0000"
        android:text="1"
        android:textSize="40sp"
        android:onClick="level1"/>

    <Button
        android:id="@+id/level2"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="198dp"
        android:background="#FF0000"
        android:text="2"
        android:textSize="40sp"
        android:onClick="level2"/>

    <Button
        android:id="@+id/level4"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#FF0000"
        android:text="3"
        android:textSize="40sp"
        android:onClick="level3"/>

    <Button
        android:id="@+id/level5"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="274dp"
        android:background="#FF0000"
        android:text="4"
        android:textSize="40sp"
        android:onClick="level4"/>

    <Button
        android:id="@+id/level6"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="188dp"
        android:background="#FF0000"
        android:text="5"
        android:textSize="40sp"
        android:onClick="level5"/>

    <Button
        android:id="@+id/level8"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#FF0000"
        android:text="6"
        android:textSize="40sp"
        android:onClick="level6"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="27dp"
        android:text="Pick a level..."
        android:textColor="#1a1a1a"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>