<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="#ebebeb"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/gameStarHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="#1a1a1a"
        android:gravity="center"
        android:text="GAMESTAR"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/playText"
        android:layout_width="79dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="115dp"
        android:layout_marginRight="115dp"
        android:layout_toStartOf="@+id/playButton"
        android:layout_toLeftOf="@+id/playButton"
        android:text="PLAY"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/achievementsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@+id/achievementsButton"
        android:layout_toLeftOf="@+id/achievementsButton"
        android:text="ACHIEVEMENTS"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/helpButton"
        android:layout_toLeftOf="@+id/helpButton"
        android:text="HELP"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/optionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toStartOf="@+id/optionsButton"
        android:layout_toLeftOf="@+id/optionsButton"
        android:text="OPTIONS"
        android:textColor="#1a1a1a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/playButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/playText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/play_menu" />

    <Button
        android:id="@+id/achievementsButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/playText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-140dp"
        android:background="@drawable/achievements_icon"
        android:onClick="openAchievements"/>

    <Button
        android:id="@+id/helpButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/playText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-240dp"
        android:background="@drawable/help_menu"
        android:onClick="openHelp"/>

    <Button
        android:id="@+id/optionsButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/playText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-322dp"
        android:background="@drawable/options_menu"
        android:onClick="openOptions"/>

</RelativeLayout>